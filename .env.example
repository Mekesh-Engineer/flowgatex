# ========================================
# FIREBASE CONFIGURATION
# ========================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (for server-side operations)
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account",...}'

# ========================================
# PAYMENT GATEWAYS
# ========================================
# Razorpay (Get keys from https://dashboard.razorpay.com)
VITE_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# Cashfree (Optional)
VITE_CASHFREE_APP_ID=xxxxxxxxxxxxx
CASHFREE_SECRET_KEY=xxxxxxxxxxxxx

# ========================================
# GOOGLE SERVICES
# ========================================
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ========================================
# APPLICATION CONFIGURATION
# ========================================
VITE_APP_NAME=FlowGateX
VITE_APP_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:3000/api
VITE_ENV=development

# ========================================
# FEATURE FLAGS
# ========================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=true
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_DEBUG=true

# ========================================
# SENTRY (Error Tracking)
# ========================================
VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ========================================
# IOT DEVICES
# ========================================
VITE_IOT_WS_ENDPOINT=wss://flowgatex.com/iot/sync

# ========================================
# ANALYTICS
# ========================================
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_VERCEL_ANALYTICS=true
